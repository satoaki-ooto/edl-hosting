{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": false,
    "diffEditor.ignoreTrimWhitespace": false
  },
  // .venv 内の python を使用
  "python.defaultInterpreterPath": "${workspaceFolder}/bin/python",
  "python.analysis.autoFormatStrings": false,
  "black-formatter.path": [ "${workspaceFolder}/bin/black" ],
  "black-formatter.args": ["--config pyproject.toml"],
  "black-formatter.interpreter": ["${workspaceFolder}/bin/python"],
  "flake8.args": ["--config pyproject.toml"],
  "flake8.path": [ "${workspaceFolder}/bin/pflake8" ],
  "flake8.interpreter": ["${workspaceFolder}/bin/python"],
  "isort.path": [ "${workspaceFolder}/bin/isort" ],
  "isort.check": true,
  "isort.args": ["--settings-path", "pyproject.toml"],
  "isort.importStrategy": "useBundled",
  "isort.serverEnabled": true,
  "isort.showNotifications": "always",
  "isort.interpreter": ["${workspaceFolder}/bin/python"],
  "mypy-type-checker.path": [ "${workspaceFolder}/bin/mypy"],
  "mypy-type-checker.interpreter": [ "${workspaceFolder}/bin/python" ]
}
