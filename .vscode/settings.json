{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": false,
    "diffEditor.ignoreTrimWhitespace": false
  },
  // use python on venv
  "python.defaultInterpreterPath": "${workspaceFolder}/bin/python",
  "python.analysis.autoFormatStrings": true,
  "flake8.args": ["--max-complexity=10", "--ignore=W293, W504, E501"],
  "flake8.path": [
    // use pyproject-flake8
    "${workspaceFolder}/bin/pflake8"
  ],
  "black-formatter.path": ["${workspaceFolder}/bin/black"],
  "black-formatter.args": ["--config pyproject.toml"],
  "isort.path": ["${workspaceFolder}/bin/isort"],
  "isort.check": true,
  "isort.args": ["--profile", "black", "--python-version", "auto"],
  "isort.importStrategy": "fromEnvironment",
  "mypy-type-checker.path": ["${workspaceFolder}/bin/mypy"],
  "python.analysis.typeCheckingMode": "basic"
}
